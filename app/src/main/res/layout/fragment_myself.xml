<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/personal_bkg"
        >
        <ImageView
            android:id="@+id/Headportrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/big_defaulthead_head"/>
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/"
            android:textColor="#ff0000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="171dp"
            android:text="注册"/>
        <ImageView
            android:id="@+id/registeright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow_listpage_normal"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/re1"
        android:background="@color/hui"/>
    <RelativeLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text1">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/my_order_user_icon_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:text="我的订单"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow_listpage_normal"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/hui"
        android:layout_below="@id/re2"/>
    <LinearLayout
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@id/text2"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/myself_line1"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/my_wallet_user_icon_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="待付款"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/myself_line2"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_car"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="待收获"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/myself_line3"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@drawable/c_comment_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="交易完成"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/line1"
        android:background="@color/hui"
        />
    <ListView
        android:id="@+id/myself_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_below="@id/text3"></ListView>
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/myself_listView1"
        android:background="@color/hui"/>
    <ListView
        android:id="@+id/myself_listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_below="@id/text4"></ListView>

</RelativeLayout>
